root = true

[*.{cs,csx}]
charset = utf-8-bom
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
csharp_new_line_before_open_brace = all
dotnet_diagnostic.IDE0005.severity = silent

[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
charset = utf-8